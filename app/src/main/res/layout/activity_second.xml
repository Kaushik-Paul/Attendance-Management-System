<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/classroom2"
        android:backgroundTint="#80FFFFFF"
        android:backgroundTintMode="src_over"
        tools:context=".SecondActivity">

    <Spinner
            android:layout_width="158dp"
            android:layout_height="49dp" android:id="@+id/spinner"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="115dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="138dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" tools:ignore="SpeakableTextPresentCheck"/>
    <TextView
            android:text="   Stream"
            android:layout_width="99dp"
            android:textColor="@color/white"
            android:layout_height="31dp" android:id="@+id/textView"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp" android:layout_marginEnd="167dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner"/>
    <TextView
            android:text="Teacher Name (in abs)"
            android:textColor="@color/white"
            android:layout_width="188dp"
            android:layout_height="44dp" android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp" android:layout_marginEnd="122dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/teacherNameEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/teacherNameEditText"
            android:hint="Enter Here"
            android:textColorHint="@color/black"
            android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="101dp" android:minHeight="48dp"/>
    <TextView
            android:text="Subject Code"
            android:textColor="@color/white"
            android:layout_width="131dp"
            android:layout_height="43dp" android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_marginEnd="148dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/subjectCodeEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/subjectCodeEditText"
            android:hint="Enter Here"
            android:textColorHint="@color/black"
            android:minHeight="48dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="No of Students"
            android:textColor="@color/white"
            android:layout_width="132dp"
            android:layout_height="32dp" android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/subjectCodeEditText" android:layout_marginEnd="148dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/noOfStudentsEditText"
            android:hint="Enter Here"
            android:textColorHint="@color/black"
            android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="101dp" android:minHeight="48dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="342dp"
            android:layout_height="73dp" android:id="@+id/button"
            android:textSize="18sp" android:textColor="#FAF6F6"
            android:backgroundTint="#13A597"
            android:onClick="formSubmit"
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/noOfStudentsEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="34dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="33dp"
            android:layout_marginEnd="35dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>