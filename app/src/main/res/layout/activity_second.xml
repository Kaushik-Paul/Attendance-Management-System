<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <Spinner
            android:layout_width="316dp"
            android:layout_height="51dp" android:id="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
            android:layout_marginEnd="63dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="71dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="609dp"/>
    <TextView
            android:text="Stream"
            android:layout_width="99dp"
            android:layout_height="31dp" android:id="@+id/textView"
            android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="33dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="265dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Teacher Name (in abs)"
            android:layout_width="334dp"
            android:layout_height="37dp" android:id="@+id/textView2"
            android:textSize="18sp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="179dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/teacherNameEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/teacherNameEditText"
            android:hint="Enter Here" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="151dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="496dp"/>
    <TextView
            android:text="Subject Code"
            android:layout_width="299dp"
            android:layout_height="34dp" android:id="@+id/textView3"
            android:textSize="18sp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/teacherNameEditText"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="443dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
            android:layout_marginEnd="65dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/subjectCodeEditText"
            android:hint="Enter Here" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="384dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="150dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="No of Students"
            android:layout_width="314dp"
            android:layout_height="36dp" android:id="@+id/textView4"
            android:textSize="18sp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/subjectCodeEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="338dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/noOfStudentsEditText"
            android:hint="Enter Here" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="47dp" android:layout_marginEnd="150dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="279dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="127dp"
            android:layout_height="68dp" android:id="@+id/button"
            android:textSize="18sp" android:textColor="#FAF6F6"
            android:backgroundTint="#13A597" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/noOfStudentsEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="141dp"
            android:layout_marginEnd="141dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="193dp"
            android:onClick="formSubmit" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>